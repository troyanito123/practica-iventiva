<h1>Login</h1>

<% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><%= message %></div>
<% end %>

<%= form_for :session, url: login_path, method: 'post' do |f| %>

  <div>
    <%= f.label 'Email:' %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label 'Password:' %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'Entrar' %>
<% end %>
<h1>Login</h1>

<% flash.each do |message_type, message| %>
  <p> <%= message %></p>
<% end %>

<%= form_for :session, url: login_path, method: 'post' do |f| %>

  <div>
    <%= f.label 'Email:' %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label 'Password:' %>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.label :Recuerdame, class: "checkbox inline" do %>
      <%= f.check_box :remember_me %>
      <span>Remember me in this computer</span>
  </div>

  <%= f.submit 'Entrar' %>
<% end %>


<% end %>
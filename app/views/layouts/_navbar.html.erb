<ul>
  <% if logged_in? %>
    <li>
      <%= link_to 'Home',  home_path%>
    </li>

    <li>
      <%= link_to current_user.name,  '#'%>
    </li>

    <li>
      <%= link_to 'Salir',  logout_path, method: :delete %>
    </li>
  <% else %>
    <li>
      <%= link_to 'Login',  login_path%>
    </li>
    <li>
      <%= link_to 'Registro',  register_path%>
    </li>
  <% end %>
</ul>
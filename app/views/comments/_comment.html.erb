<div class="bg-light px-3 py-1 mx-2 shadow mt-4">
  <p>
    <% if comment.user.avatar.attached? %>
      <%= image_tag comment.user.avatar.variant(resize: "40x40"), class: 'rounded-circle' %>
    <% else %>
      <%= image_tag "no-user.png", alt: "NO USER", size: "40", class: 'rounded-circle' %>
    <% end %>
    <strong class="mb-0"> <%= comment.user.name %> </strong> say:
  </p>
  <p class="mb-0"> <%= comment.comment %> </p>
  <% if logged_in? %>
    <% if current_user.admin? || current_user == comment.user %>
      <p class="text-right">
        <%= link_to 'Edit', edit_article_comment_path(comment.article, comment) %>

        <%= link_to 'Delete', [comment.article, comment],
                    method: :delete,
                    data: {confirm: 'Are you destroy this comment?'} %>
      </p>
    <% end %>
  <% end %>
</div>

